<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="@dimen/activity_horizontal_margin1"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.akramkhan.cop290.RegistrationActivity"
    tools:showIn="@layout/activity_registration"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:textAlignment="center"
        android:text="TEAM NAME"
        android:textStyle="bold|italic"
        android:textSize="@dimen/main_headings"
        android:background="@color/main_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:textColorHighlight="@color/clrText"
            android:inputType="textPersonName"
            android:layout_width="wrap_content"
            android:id="@+id/TeamName"
            android:layout_height="wrap_content"
            android:hint="Example:AVENGERS"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="CANDITATE 1"
        android:textStyle="bold|italic"
        android:textSize="@dimen/main_headings"
        android:background="@color/main_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/clrText"
            android:text="NAME     : "/>

        <EditText
            android:textColorHighlight="@color/clrText"
            android:inputType="textPersonName|textCapCharacters"
            android:id="@+id/namea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Example:Akram Khan"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/clrText"
            android:text="EntryNo. : "/>

        <EditText
            android:textColorHighlight="@color/clrText"
            android:id="@+id/entrya"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Example:2014CS10236"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="CANDITATE 2"
        android:textStyle="bold|italic"
        android:textSize="@dimen/main_headings"
        android:background="@color/main_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/clrText"
            android:text="NAME     : "/>

        <EditText
            android:textColorHighlight="@color/clrText"
            android:inputType="textPersonName"
            android:id="@+id/nameb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Example:Akram Khan"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/clrText"
            android:text="EntryNo. : "/>
        <EditText
            android:textColorHighlight="@color/clrText"
            android:id="@+id/entryb"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Example:2014CS10236"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="CANDITATE 3"
        android:textStyle="bold|italic"
        android:textSize="@dimen/main_headings"
        android:background="@color/main_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/clrText"
            android:text="NAME     : "/>
        <EditText
            android:textColorHighlight="@color/clrText"
            android:inputType="textPersonName"
            android:id="@+id/namec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Example:Akram Khan"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/clrText"
            android:text="EntryNo. : "/>
        <EditText
            android:textColorHighlight="@color/clrText"
            android:id="@+id/entryc"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Example:2014CS10236"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="140dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_gravity="center_horizontal"
        android:onClick="finalView"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:enabled="false"
        android:textColor="#010101" />

</LinearLayout>
